{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "scRNAseq.json",
    "type": "object",
    "title": "scRNAseq metadata standards",

    "properties": {
        "nrow": {
            "type": "integer",
            "description": "Number of rows."
        },

        "ncol": {
            "type": "integer",
            "description": "Number of columns."
        },

        "assay_names": {
            "type": "array",
            "description": "Names for assays.",
            "items": {
                "type": "string"
            }
        },

        "reduced_dimension_names": {
            "type": "array",
            "description": "Names for reduced dimensions.",
            "items": {
                "type": "string"
            }
        },

        "alternative_experiment_names": {
            "type": "array",
            "description": "Names for alternative experiments.",
            "items": {
                "type": "string"
            }
        }
    },

    "required": [ "nrow", "ncol" ],
    "additionalProperties": false
}
