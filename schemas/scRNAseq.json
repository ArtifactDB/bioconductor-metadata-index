{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "scRNAseq.json",
    "type": "object",
    "title": "scRNAseq metadata standards",

    "properties": {
        "assays": {
            "type": "array",
            "description": "Names for assays.",
            "items": {
                "type": "string"
            }
        },

        "reduced_dimensions": {
            "type": "array",
            "description": "Names for reduced dimensions.",
            "items": {
                "type": "string"
            }
        },

        "alternative_experiments": {
            "type": "array",
            "description": "Names for alternative experiments.",
            "items": {
                "type": "string"
            }
        }
    },

    "additionalProperties": false
}
